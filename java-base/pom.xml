<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.apache.datasketches</groupId>
    <artifactId>datasketches-characterization</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>datasketches-characterization-java-base</artifactId>
  <packaging>jar</packaging>

  <name>${project.artifactId}</name>
  <description>Characterization code for the DataSketches library. (Base/Java 8)</description>

  <properties>
    <datasketches-memory.version>3.0.2</datasketches-memory.version>
    <datasketches-java.version>6.2.0</datasketches-java.version>

    <testng.version>7.5.1</testng.version>

    <java.version>1.8</java.version>
    <!-- commented out to allow building all submodules from parent pom with any of java 8, 11, 17, 21, 25
    <java.version.range>[8,9)</java.version.range>
    -->
    <maven.compiler.release>8</maven.compiler.release>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.datasketches</groupId>
      <artifactId>datasketches-memory</artifactId>
      <version>${datasketches-memory.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.datasketches</groupId>
      <artifactId>datasketches-java</artifactId>
      <version>${datasketches-java.version}</version>
    </dependency>

    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>${testng.version}</version>
      <!-- <scope>test</scope> remove so we can run from main -->
    </dependency>

    <dependency>
      <groupId>org.apache.datasketches</groupId>
      <artifactId>datasketches-java</artifactId>
      <version>${datasketches-java.version}</version>
      <type>test-jar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!--
        Rat licence checks disabled here because they are handled by parent pom.
        This avoids the need to configure exclusions redundantly at each level.
      -->
      <plugin>
        <groupId>org.apache.rat</groupId>
        <artifactId>apache-rat-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-toolchains-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
